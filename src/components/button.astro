---
import type { HTMLAttributes } from 'astro/types';

type Variant = 'primary';
type Props = HTMLAttributes<'button'> & {
	variant: Variant;
}

const { variant = 'primary', class: className, ...props } = Astro.props;
---
<button class:list={['button', className, variant]} {...props}>
  <slot />
</button>

<style>
  .button {
    padding-block: 8px;
    padding-inline: 12px;
  }

  .primary {
    font-weight: bold;
    background-color: var(--color-french-violet-700);
    color: var(--color-french-violet-100);

    @media (prefers-color-scheme: dark) {
      background-color: var(--color-french-violet-100);
      color: var(--color-french-violet-900);
    }
  }
</style>
