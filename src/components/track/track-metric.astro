---
import type { HTMLAttributes } from "astro/types";
import Typography from '../typography.astro';

type Props = HTMLAttributes<'div'>;
export const ID_THING_WRAPPER = 'track-thing-wrapper';
export const CN_THING = 'track-thing';
export const CN_THING_EMPTY = 'empty';
export const CN_THING_NAME = 'thing-name';
export const CN_THING_DESCRIPTION = 'thing-desc';
export const CN_THING_GOAL = 'thing-goal';
export const CN_THING_TYPE = 'thing-type';

const { class: className, ...props } = Astro.props;
---
<div {...props} class:list={[CN_THING, CN_THING_EMPTY, className]}>
  <Typography variant="h3" component="p" class={CN_THING_NAME}></Typography>
  <dl>
    <dt>Description</dt><dd class={CN_THING_DESCRIPTION}></dd>
    <dt>Goal</dt><dd class={CN_THING_GOAL}></dd>
    <!-- <dt>Type</dt><dd class={CN_THING_TYPE}></dd> -->
  </dl>
</div>

<style>
  .empty {
    display: none;
  }
  dl {
    border: 1px solid var(--color-text);
    padding: 1rem;
    display: grid;
    grid-template-columns: auto 1fr;
    column-gap: 1rem;
    margin-block: .5rem 1rem;

    dt { 
      font-weight: bold;
    }
  }
</style>