{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "rootDir": "js",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["./"]
    },
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "outDir": "web/static/js",
    "removeComments": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "types": [],
  },
  "include":  ["js/**/*"],
  "exclude": ["node_modules"]
}
